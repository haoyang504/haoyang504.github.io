<div class="news">
  {% if site.news != blank %}
    <style>
      /* Make each table row exactly one line tall */
      .news .table-sm {
        line-height: 1.5;            /* choose your line height */
      }
      .news .table-sm th,
      .news .table-sm td {
        padding-block: 0.5rem;            /* no vertical padding, keeps rows = 1 line */
        padding-inline: 0.5rem;      /* keep some horizontal padding */
        vertical-align: baseline;
      }
      /* Scroll area height = 10 full lines (no half line cut) */
      .news .news-scroll {
        max-block-size: calc(10 * 1lh);  /* 10 lines tall */
        overflow-y: auto;
        padding-right: 0.5rem;          /* keeps scrollbar off text */
      }

      /* Fallback for browsers without 1lh support (approximate) */
      @supports not (height: 1lh) {
        .news .news-scroll {
          max-block-size: calc(10 * 1.5em);  /* 10 lines * line-height */
        }
      }
    </style>

    {% assign news_size = site.news | size %}
    <div class="table-responsive news-scroll">
      <table class="table table-sm table-borderless">
        {% assign news = site.news | reverse %}
        {% for item in news %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
    <div style="height:0.5lh;"></div>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
